# Service Configuration
SERVICE_NAME=authentication-service
SERVICE_VERSION=v1.0.0
ENVIRONMENT=development

# Server Configuration
APP_PORT=8080
HTTP_PORT=8080
GRPC_PORT=50051
ENABLE_HTTPS=false
TLS_CERT=/path/to/cert.pem
TLS_KEY=/path/to/key.pem

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/auth_db?sslmode=disable
DB_READ_DSNS=postgres://user:pass@read-replica-1:5432/auth_db,postgres://user:pass@read-replica-2:5432/auth_db
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFE=5m
DATABASE_DISABLED=false

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=1h

# Authentication & Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=720h

# HashiCorp Vault Configuration (Optional)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token

# Auth Service Specific
TOKEN_EXPIRATION=15m
REFRESH_EXPIRATION=7d
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m
BCRYPT_COST=10

# OAuth Settings (Optional)
OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# MFA Settings
MFA_ENABLED=false
TOTP_ISSUER=Lee-Tech

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging & Monitoring
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_DB_LOG=false
ENABLE_METRICS=true
ENABLE_TRACING=false
TRACING_ENDPOINT=localhost:4317
TRACING_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPS=100

# Timeouts
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=30s
SHUTDOWN_TIMEOUT=10s

# Feature Flags
ENABLE_SWAGGER=true
SWAGGER_FILE=
SWAGGER_UI_PATH=/swagger/
SWAGGER_PROTECTED_PREFIXES=/api
ENABLE_PROFILING=false
ENABLE_DEBUG=false
